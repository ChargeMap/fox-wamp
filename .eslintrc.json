{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "plugins": [
    "mocha"
  ],
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "no-unused-vars": ["error", { "args": "none" }],
    "no-console": "off",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}